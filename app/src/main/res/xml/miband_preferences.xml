                app:iconSpaceReserved="false"
                app:useSimpleSummaryProvider="true" />
            <Preference
                android:key="mi_try_generic_email"
                android:persistent="false"
                android:title="@string/vibration_try"
                app:iconSpaceReserved="false" />
        </PreferenceScreen>

        <PreferenceScreen
